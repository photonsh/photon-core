{
  "parser": "babel-eslint",

  "rules": {
    "max-len": ["error", 120, 2, {
      "ignoreUrls": true,
      "ignoreComments": false,
      "ignoreRegExpLiterals": true,
      "ignoreStrings": true,
      "ignoreTemplateLiterals": true
    }],
    "semi": ["error", "never"],
    "no-param-reassign": ["error", { "props": false }],
    "arrow-parens": ["error", "always"]
  },

  "extends": "airbnb"
}
